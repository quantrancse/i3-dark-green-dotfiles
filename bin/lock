#!/bin/sh

BLANK='#2e3440'
DEFAULT='#8fbcbb'

i3lock \
--insidever-color=$BLANK     \
--ringver-color=$DEFAULT     \
\
--insidewrong-color=$BLANK   \
--ringwrong-color=$DEFAULT   \
\
--inside-color=$BLANK        \
--ring-color=$DEFAULT        \
--line-color=$BLANK          \
--separator-color=$DEFAULT   \
\
--verif-color=$DEFAULT       \
--wrong-color=$DEFAULT       \
--time-color=$DEFAULT        \
--date-color=$DEFAULT        \
--layout-color=$DEFAULT      \
--keyhl-color=$BLANK         \
--bshl-color=$BLANK          \
\
--screen 1                   \
--blur 10                    \
--clock                      \
--indicator                  \
--time-str="%H:%M:%S"        \
--date-str="%A, %m %Y"       \
